task 5
function findVowels(word) {
    let letters = "aeiouAEIOU";
    let total = 0;

    for (let ch of word) {
    if (letters.includes(ch)) {
    total++;
    }
    }
    return total;
}

console.log(findVowels("Education"));
task 6
let vowelCounter = (text) => {
    let letters = "aeiouAEIOU";
    let total = 0;

    for (let c of text) {
    if (letters.includes(c)) {
        total++;
    }
    }
    return total;
};

console.log(vowelCounter("JavaScript"));
