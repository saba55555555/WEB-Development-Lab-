let values = [3, 6, 11, 20, 25, 42];

for (let item of values) {
    if (item % 2 == 0) {
    console.log("Even:", item);
    }
}
task 2
let data = [12, 55, 4, 87, 19, 2];
let largest = data[0];
let smallest = data[0];

for (let val of data) {
    if (val > largest) {
    largest = val;
    }
    if (val < smallest) {
    smallest = val;
    }
}

console.log("Maximum =", largest);
console.log("Minimum =", smallest);
