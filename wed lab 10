<!DOCTYPE html>
<html>
<head>
<title>Task 4</title>
<script src="task4.js" defer></script>
</head>

<body style="text-align:center;">  
<h2>Bulb ON/OFF Example</h2>

<img id="myBulb" src="https://www.w3schools.com/js/pic_bulboff.gif" width="150" onclick="toggleBulb()">

</body>
</html>
//jss
function toggleBulb() {
    let bulb = document.getElementById("myBulb");
    let src = bulb.getAttribute("src");

    if (src ==="https://www.w3schools.com/js/pic_bulboff.gif") {
    bulb.setAttribute("src", "https://www.w3schools.com/js/pic_bulbon.gif");
    } else {
    bulb.setAttribute("src", "https://www.w3schools.com/js/pic_bulboff.gif");
    }
}
task 5
<!DOCTYPE html>
<html>
<head>
    <title>Task 5</title>
    <script src="task5.js"></script>
</head>
<body style="text-align:center;">
    <p id="para">This paragraph will hide and show.</p>
    <button onclick="toggleText()">Hide / Show</button>
</body>
</html>
// jss
function toggleText() {
    let p = document.getElementById("para");
    if (p.style.display === "none") {
    p.style.display = "block";
    } else {
    p.style.display = "none";
    }
}

document.documentElement.prepend(login);
