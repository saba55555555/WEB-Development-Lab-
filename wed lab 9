Css File 
body {
    font-family: Arial, sans-serif;
    margin: 20px;
}

h1 {
    color: navy;
}

.para {
    color: black;
    margin: 10px 0;
}

#demo,
#textPara {
    margin: 10px 0;
    padding: 10px;
    border: 1px solid #ccc;
}

ul {
    list-style-type: disc;
    margin-left: 20px;
}
Jss 
// Task 1
let paragraphs = document.querySelectorAll(".para");
paragraphs.forEach(function (para) {
    para.style.color = "blue";
});

// Task 2
let demoPara = document.getElementById("demo");
demoPara.innerHTML = "This is the new content with <b>bold text</b> inside it.";

// Task 3
let textPara = document.getElementById("textPara");
textPara.innerText = "This is the new visible text without any tags.";

// Task 4
let listItems = document.querySelectorAll("li");
listItems.forEach(function (item) {
    item.textContent = item.textContent.toUpperCase();
});
